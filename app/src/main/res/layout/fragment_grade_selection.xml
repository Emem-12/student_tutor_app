<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradeSelectionFragment">

    <TextView
        android:id="@+id/whats_your_grade"
        android:layout_width="227dp"
        android:layout_height="33dp"
        android:text="What's your grade"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/grade1to5Card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/expandable_btn"
        android:clickable="true"
        android:contextClickable="true"
        android:padding="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/whats_your_grade" />

    <TextView
        android:id="@+id/grade1to5"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:text="Grade 1-5"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/grade1to5Card"
        app:layout_constraintStart_toStartOf="@id/grade1to5Card"
        app:layout_constraintTop_toTopOf="@id/grade1to5Card" />

    <ImageView
        android:id="@+id/grade1to5Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/stream_ic"
        app:layout_constraintBottom_toBottomOf="@id/grade1to5Card"
        app:layout_constraintEnd_toEndOf="@id/grade1to5Card"
        app:layout_constraintTop_toTopOf="@id/grade1to5Card" />
    />


    <androidx.cardview.widget.CardView
        android:id="@+id/grade6to9Card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/expandable_btn"
        android:clickable="true"
        android:padding="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/grade1to5Card" />

    <TextView
        android:id="@+id/grade6to9"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:text="Grade 6-9"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/grade6to9Card"
        app:layout_constraintStart_toStartOf="@id/grade6to9Card"
        app:layout_constraintTop_toTopOf="@id/grade6to9Card" />

    <ImageView
        android:id="@+id/grade6to9Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/stream_ic"
        app:layout_constraintBottom_toBottomOf="@id/grade6to9Card"
        app:layout_constraintEnd_toEndOf="@id/grade6to9Card"
        app:layout_constraintTop_toTopOf="@id/grade6to9Card" />
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/grade10to11Card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/expandable_btn"
        android:clickable="true"
        android:padding="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/grade6to9Card" />

    <TextView
        android:id="@+id/grade10to11"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:text="Grade 10-11"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/grade10to11Card"
        app:layout_constraintStart_toStartOf="@id/grade10to11Card"
        app:layout_constraintTop_toTopOf="@id/grade10to11Card" />

    <ImageView
        android:id="@+id/grade10to11Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/stream_ic"
        app:layout_constraintBottom_toBottomOf="@id/grade10to11Card"
        app:layout_constraintEnd_toEndOf="@id/grade10to11Card"
        app:layout_constraintTop_toTopOf="@id/grade10to11Card" />
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/grade12to13Card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/expandable_btn"
        android:clickable="true"
        android:padding="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/grade10to11Card" />

    <TextView
        android:id="@+id/grade12to13"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:text="Grade 12-13"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btnArts"
        app:layout_constraintStart_toStartOf="@id/grade12to13Card"
        app:layout_constraintTop_toTopOf="@id/grade12to13Card" />

    <ImageView
        android:id="@+id/grade12to13Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/stream_ic"
        app:layout_constraintBottom_toBottomOf="@id/grade12to13Card"
        app:layout_constraintEnd_toEndOf="@id/grade12to13Card"
        app:layout_constraintTop_toTopOf="@id/grade12to13Card" />
    />

    <LinearLayout
        android:id="@+id/streamsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/grade12to13"
        app:layout_constraintStart_toStartOf="@id/grade12to13"
        app:layout_constraintEnd_toEndOf="@id/grade12to13Toggle"
        app:layout_constraintBottom_toBottomOf="@id/grade12to13Card"/>

        <Button
            android:id="@+id/btnArts"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/option_btn"
            android:text="Arts"
            app:layout_constraintTop_toBottomOf="@id/grade12to13"
            app:layout_constraintStart_toStartOf="@id/grade12to13"
            app:layout_constraintBottom_toBottomOf="@id/grade12to13Card"
            />
<!--

        <Button
            android:id="@+id/btnScience"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/option_btn"
            android:text="Science" />

        <Button
            android:id="@+id/btnMaths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/option_btn"
            android:text="Maths" />

        <Button
            android:id="@+id/btnCommerce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/option_btn"
            android:text="Commerce" />
-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn"
        android:layout_width="267dp"
        android:layout_height="61dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="100dp"
        android:text="Next"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/skip_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grade12to13Card" />

    <TextView
        android:id="@+id/skip_txt"
        android:layout_width="35dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:textColor="#606EBF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/next_btn"
        android:text="Skip"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>



