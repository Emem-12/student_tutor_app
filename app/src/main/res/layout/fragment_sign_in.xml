<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signin_illustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email address"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_txt"
        android:hint="name@gmail.com"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/email_txt"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        />
    <TextView
        android:id="@+id/password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_txt"
        android:hint="........"
        android:textSize="30sp"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/password_txt"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        />
    <ImageView
        android:id="@+id/password_ic"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/password_icon"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintBottom_toBottomOf="@id/password"
        app:layout_constraintTop_toTopOf="@id/password" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/signin_btn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Sign in"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/no_account_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/signin_btn"
        app:layout_constraintEnd_toStartOf="@id/sign_up_txt"
        app:layout_constraintTop_toBottomOf="@id/signin_btn"
        />
    <TextView
        android:id="@+id/sign_up_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textSize="15sp"
        android:textColor="#606EBF"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/no_account_txt"
        app:layout_constraintEnd_toEndOf="@id/signin_btn"
        app:layout_constraintTop_toBottomOf="@id/signin_btn"
        />





</androidx.constraintlayout.widget.ConstraintLayout>